                h2 Formation

                +tex.
                    $\mathbf{Definition\ 20.1}$ ($\Delta$-Formation, Simplicial Set).
                +tex(true).
                    $$
                        \Delta : U =_{def} \textbf{Simplicial}.
                    $$

                h2 Introduction

                +tex.
                    $\mathbf{Definition\ 20.2}$ ($\Delta$-Introduction, Simplicial).
                +tex(false).
                    $$
                      \begin{equation}
                      \tag{$\Delta$-intro}
                      \dfrac{\begin{split}
                             & v_k, f_m : \Delta, e_i : \textbf{Path}_{\Delta} \\
                             & \text{context}, \text{cond} : \Gamma \\
                             \end{split}
                            }
                            {\Pi\ (\text{context}), \text{cond} \vdash k\ (\ v_k\ |\ f_m,\ e_i).}
                     \end{equation}
                    $$


                h2 Eliminators

                +tex.
                    $\mathbf{Definition\ 20.3}$ ($\Delta$-Face).
                +tex(true).
                    $$
                      \begin{equation}
                      \tag{$\Delta$-Elim$_1$}
                      \dfrac{\begin{split}
                             & v_k, f_m : \Delta, e_i : \textbf{Path}_{\Delta}, i : \text{Fin}_{k+1}\\
                             \end{split}
                            }
                            {\partial_i \Delta \rightarrow f_i}
                     \end{equation}
                    $$

                +tex.
                    $\mathbf{Definition\ 20.4}$ ($\Delta$-Composition).
                +tex(true).
                    $$
                      \begin{equation}
                      \tag{$\Delta$-Elim$_2$}
                      \dfrac{\begin{split}
                             & g, h : \Delta, e_i : \partial_0 g = \partial_k h \\
                             \end{split}
                            }
                            {g \circ h : \Delta}
                     \end{equation}
                    $$

                +tex.
                    $\mathbf{Definition\ 20.5}$ ($\Delta$-Filing).
                +tex(false).
                    $$
                      \begin{equation}
                      \tag{$\Delta$-Elim$_3$}
                      \dfrac{\begin{split}
                             & g : \Delta, h : \textbf{Path}_{\Delta} \\
                             \end{split}
                            }
                            {g < h : \Delta}
                     \end{equation}
                    $$

